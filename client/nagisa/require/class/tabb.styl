//rule
if import != false
  @import '../rule'

//tabb
.page
  @extend .abs
  display none
  margin 0
  padding 16px
  text-align left
  opacity 0
  \*zoom 1

  &.active
    position relative
    display block
    opacity 1
    \*zoom 1

//tabb
.tabb

  li
    position relative
    display block
    overflow hidden
    width 100%
    height 32px
    line-height 32px

    &:nth-of-type(2n)
      background-color #f9f9f9

  .item-tabb
    &:hover
      border-color #c33 !important

      .title
        color #c33

  .c
    clear both !important
    padding 0 0 0 8px !important
    height 32px !important
    border none !important
    line-height 32px !important

    p
      color #999
      font-size 13px

    .more
      position absolute
      top 0
      right 8px
      display block
      width auto
      height 32px
      color #666
      font-size 13px
      line-height 32px