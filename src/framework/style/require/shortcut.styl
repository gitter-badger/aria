//rule
if import != false
  @import 'rule'

//shortcut
#btn-top-shortcut
  position fixed
  -webkit-transform translateZ(0)
  top auto
  bottom 32px
  left auto
  z-index 65535
  width 44px
  height auto
  text-align center

  .item
    width 44px
    height @width
    margin 8px 0 0
    padding 0
    color #bbb
    background-color #fcfcfc
    border 1px solid #ddd
    position relative
    display block
    cursor pointer
    &:hover
      color #fff
      background-color #bbb
      border-color #aaa
      .icon
        display none
      .hint
        display block
      .pts
        background-color #aaa
    &:active, &.active
      background-color #aaa
      color #fff
      border-color #999
  .top
    visibility hidden

  .icon
    position absolute
    margin 0
    padding 0
    left 5px
    top @left
    width 32px
    height @width
    line-height @height
    font-size 24px
  .hint
    position absolute
    margin 0
    padding 0
    left 5px
    top @left
    display none
    width 32px
    height @width
    line-height @width * 0.5
    font-size 12px
    overflow hidden
    text-shadow 0 1px 1px rgba(#000, 0.1)
    pointer-events none
  .single
    line-height 32px
  .pts
    color #fff
    background-color #bbb
    display block
    position absolute
    top -8px
    right -4px
    font-size 12px
    line-height 16px
    padding 0 4px
    border-radius 2px
  .icon-paper-plane
    font-size 20px
  .icon-lightbulb-o
    font-size 28px