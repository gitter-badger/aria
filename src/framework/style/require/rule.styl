//rule
//inline-block
.inline-block
  display inline-block
  _display inline

//transtion
trans(delay = 0.2s, time = 0.2s, type = all)
  transition time delay type ease

//absoulute
.abs
  position absolute
  display block

//float
.l
  float left

.r
  float right

//hidden
.hidden
  display none !important

//no select
.no-select
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  -o-user-select none
  user-select none
  cursor default

//no float
.no-float
  float none !important

//wait
.wait
  cursor wait !important
  *
    cursor wait

//transform
transform()
  -webkit-transform arguments
  -moz-transform arguments
  -ms-transform arguments
  -o-transform arguments
  transform arguments
//transition
transition()
  -webkit-transition arguments
  -moz-transition arguments
  -ms-transition arguments
  -o-transition arguments
  transition arguments
//filter
filter()
  -webkit-filter arguments
  -moz-filter arguments
  -ms-filter arguments
  -o-filter arguments
  filter arguments

//salt
salt()
  unquote('url(' + arguments + '?salt='+ date + ')')

//cdn
cdn()
  unquote('url(' + path + arguments + '?salt='+ date + ')')