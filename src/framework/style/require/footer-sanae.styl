//rule
if import != false
  @import 'rule'

#footer
  background-color #eee
  margin-top 110px
#footer-inner
  padding 42px 0 32px 0
  .top-footer
    height 110px
    .icon-caret-right
      position absolute
      right -30px
      top 38px
      font-size 36px
      color #fff
    .l
      width 850px
      height 100%
      \*height 94px
      padding 10px 0
      background-color #fff
      position relative
    .r
      width 110px
      height 100%
      background-color #fff
      position relative
      .pts
        color #fff
        background-color red
        @extend .abs
        right 4px
        top 12px
        height 16px
        line-height @hegiht
        padding 0 4px
        border-radius 2px
        box-shadow 0 1px 3px rgba(#000, 0.3)
        font-size 12px
    .unit
      border-right 1px solid #eee
      float left
      height 100%
      padding 8px 0 8px 28px
      width 170px
      \*width 134px
      .a
        margin-bottom 14px
        font-size 14px
        color #999
      .b
        a
          display block
          white-space nowrap
          margin 0 16px 6px 0
          float left
          font-size 12px
          color #333
          &:hover
            color #e04270
    .unit-2
      width 148px
      \*width 112px
    .unit-4
      border-right 0
      width 180px
      \*width 144px
  .bottom-footer
    text-align center
    p
      color #999
      line-height 1.5
#avatar-ac-footer
  text-align center
  padding 16px 0 18px 0
  @extend .no-select
  img
    width 87px
    height auto
#a-logo-footer
  width 70px
  height 22px
  display block
  background url('../project/sanae/style/image/sprite-guide.png') -170px -32px no-repeat
  margin 24px auto 8px auto

